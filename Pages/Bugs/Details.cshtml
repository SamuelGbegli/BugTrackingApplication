@page
@model BugTrackingApplication.Pages.Bugs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Bug</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bug.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bug.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bug.Severity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bug.Severity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bug.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bug.Description)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.Bug.IsOpen)
            {
                <span>Open</span>
            }
            else{
                <span>Closed</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bug.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bug.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bug.Updated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bug.Updated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bug.Project)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bug.Project.Name)
        </dd>
    </dl>
</div>

<div>
    <form method="post">
        @if (Model.Bug.IsOpen)
        {
            <input type="submit" class="btn btn-primary" value="Close bug" />
        }
        else
        {
            <input type="submit" class="btn btn-primary" value="Reopen bug" />
        }
    </form>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Bug.ID">Edit</a> |
    <a asp-page="./Index" asp-route-id="@Model.Bug.ProjectID">Back to List</a>
</div>
