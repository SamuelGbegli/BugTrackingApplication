@page
@model BugTrackingApplication.Pages.Bugs.EditModel

@{
    ViewData["Title"] = "Edit " + Model.Bug.Title;
}

<h3>Edit @Model.Bug.Title</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bug.ID" />
            <div class="form-group">
                <label asp-for="Bug.Title" class="control-label"></label>
                <input asp-for="Bug.Title" class="form-control" />
                <span asp-validation-for="Bug.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.Severity" class="control-label"></label>
                <select asp-for="Bug.Severity" class="form-control">
                    <option>High</option>
                    <option>Medium</option>
                    <option>Low</option>
                </select>
                <span asp-validation-for="Bug.Severity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.Description" class="control-label"></label>
                <input asp-for="Bug.Description" class="form-control" />
                <span asp-validation-for="Bug.Description" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Bug.IsOpen" />
            <input type="hidden" asp-for="Bug.Created" />
            <input type="hidden" asp-for="Bug.Updated" />
            <input type="hidden" asp-for="Bug.ProjectID"/>
            <input type="hidden" asp-for="Bug.User" />
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" asp-route-id="@Model.Bug.ProjectID" class="btn btn-secondary">Return</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
