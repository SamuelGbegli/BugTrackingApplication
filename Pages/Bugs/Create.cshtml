@page "{id:int?}"
@model BugTrackingApplication.Pages.Bugs.CreateModel

@{
    ViewData["Title"] = "Add new bug";
}

<h3>Add new bug</h3>
<h6>@Model.Bug.Project.Name</h6>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bug.Title" class="control-label"></label>
                <input asp-for="Bug.Title" class="form-control" />
                <span asp-validation-for="Bug.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.Severity" class="control-label"></label>
                <select asp-for="Bug.Severity" class="form-control">
                    <option>High</option>
                    <option>Medium</option>
                    <option>Low</option>
                </select>
                <span asp-validation-for="Bug.Severity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.Description" class="control-label"></label>
                <textarea asp-for="Bug.Description" class="form-control"></textarea>
                <span asp-validation-for="Bug.Description" class="text-danger"></span>
            </div>
            <br />
            <input type="hidden" asp-for="Bug.ProjectID" />
            <input type="hidden" asp-for="Bug.User" />
            <input type="hidden" asp-for="Bug.Project" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="./Index" asp-route-id="@Model.Bug.ProjectID" class="btn btn-secondary">Return</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
