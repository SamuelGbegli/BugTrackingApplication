@page
@model BugTrackingApplication.Pages.Projects.DeleteModel

@{
    ViewData["Title"] = "Delete " + Model.Project.Name;
}

<h3>Delete @Model.Project.Name</h3>

<i<p>Are you sure you want to delete @Model.Project.Name? This cannot be undone.</p>
<div>        
    <form method="post">
        <input type="hidden" asp-for="Project.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <button class="btn btn-secondary" asp-page="./Index">Go back</button>
    </form>
</div>
