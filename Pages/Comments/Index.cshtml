@page
@model BugTrackingApplication.Pages.Comments.IndexModel

@{
    ViewData["Title"] = "Comments";
}

<h1>Comments</h1>

<p>
    <a asp-page="../Bugs/Index" asp-route-id="@Model.Bug.ProjectID">Go back to project overview</a>
</p>

<div class="row">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label"></label>
            <input asp-for="Comment.Text" class="form-control" />
            <span asp-validation-for="Comment.Text" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Comment.BugID"/>
        <br/>
        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-primary"/>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments[0].Updated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                    @if (item.CanEdit) {
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> <span>|</span>
                    
                    }
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
