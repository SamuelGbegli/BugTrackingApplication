@page "{id:int?}"
@model BugTrackingApplication.Pages.Comments.EditModel

@{
    ViewData["Title"] = "Edit comment";
}

<h3>Edit comment</h3>

<h4>Comment</h4>
<hr />
<div class="row">
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Comment.ID" />
            <div class="form-group">
                <label asp-for="Comment.Text" class="control-label"></label>
                <input asp-for="Comment.Text" class="form-control" />
                <span asp-validation-for="Comment.Text" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Comment.Created" />
            <input type="hidden" asp-for="Comment.Updated" />
            <input type="hidden" asp-for="Comment.BugID" />
            <input type="hidden" asp-for="Comment.User" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
